font pango:monospace 10

gaps inner 10
gaps outer 0

new_window normal

for_window [class=".*"] border pixel 3
default_border pixel

exec --no-startup-id dbus-launch compton --config ~/.config/compton/config &
exec --no-startup-id feh --bg-scale --randomize ~/Pictures/wallpapers

set $01 20
set $02 21

set $x 24
set $v 25
set $l 26
set $c 27
set $w 28
set $k 29
set $h 30
set $g 31
set $f 32
set $q 33
set $q1 34
set $q2 35
set $u 38
set $i 39
set $a 40
set $e 41
set $o 42
set $s 43
set $n 44
set $r 45
set $t 46
set $d 47
set $y 48
set $ü 52
set $ö 53
set $ä 54
set $p 55
set $z 56
set $b 57
set $m 58
set $comma 59
set $dot 60
set $j 61

set $n1 10
set $n2 11
set $n3 12
set $n4 13
set $n5 14
set $n6 15
set $n7 16
set $n8 17
set $n9 18
set $n0 19

set $hat 49

set $left 113
set $right 114
set $up 111
set $down 116

# Autostart
exec_always --no-startup-id xset r rate 250 40
exec_always --no-startup-id xset s off
exec_always --no-startup-id xset +dpms
exec_always --no-startup-id xset dpms 0 0 0

workspace_layout default

# exec work
# workspace 1 output eDP-1
workspace 1 output DP-1
workspace 2 output HDMI-1

# workspace names
set $ws0 "0:⁰"
set $ws1 "1:¹"
set $ws2 "2:²"
set $ws3 "3:³"
set $ws4 "4:¹"
set $ws5 "5:²"
set $ws6 "6:¹"
set $ws7 "7:²"
set $ws8 "8:¹"
set $ws9 "9:²"
set $ws10 "10:³"

# align workspaces
workspace 0 output eDP-1
workspace 1 output eDP-1
workspace 2 output eDP-1
workspace 3 output eDP-1
workspace 4 output HDMI-1
workspace 5 output HDMI-1
workspace 6 output HDMI-1
workspace 7 output HDMI-1
workspace 8 output DP-1
workspace 9 output DP-1
workspace 10 output DP-1

# switch to workspace
bindcode mod1+mod3+$hat workspace number $ws0
bindcode mod1+mod3+$n1 workspace number $ws1
bindcode mod1+mod3+$n2 workspace number $ws2
bindcode mod1+mod3+$n3 workspace number $ws3
bindcode mod1+mod3+$n4 workspace number $ws4
bindcode mod1+mod3+$n5 workspace number $ws5
bindcode mod1+mod3+$n6 workspace number $ws6
bindcode mod1+mod3+$c workspace number $ws6
bindcode mod1+mod3+$n7 workspace number $ws7
bindcode mod1+mod3+$n8 workspace number $ws8
bindcode mod1+mod3+$n9 workspace number $ws9
bindcode mod1+mod3+$n0 workspace number $ws10
bindcode mod1+mod3+$m workspace number $ws8
bindcode mod1+mod3+$comma workspace number $ws9
bindcode mod1+mod3+$dot workspace number $ws10

# start programs
bindcode mod1+$t exec --no-startup-id gnome-terminal
bindcode mod1+$d exec --no-startup-id gnome-terminal --working-directory="$(cat /tmp/whereami)"
bindcode mod1+$m exec --no-startup-id google-chrome-stable --profile-directory='Default'
bindcode mod1+$comma exec --no-startup-id google-chrome-stable --profile-directory='Profile 1'
bindcode mod1+$dot exec --no-startup-id google-chrome-stable --profile-directory='Profile 2'
bindcode mod1+$j exec --no-startup-id google-chrome-stable --profile-directory='Profile 3'
bindcode mod1+$n exec --no-startup-id gnome-terminal -e "zsh -c nnn"
bindcode mod1+mod3+$x exec --no-startup-id "subl ~/.i3/config"
bindcode mod1+$s exec --no-startup-id "subl"
bindcode mod1+mod3+$f exec --no-startup-id flameshot gui
bindcode mod1+mod3+$d exec --no-startup-id deepin-screenshot
bindcode mod1+$c kill
bindcode mod1+$p exec dmenu_run
bindcode mod1+mod3+$g exec i3lock --color 2b3134
bindcode mod1+mod3+$r exec --no-startup-id i3-msg reload && i3-msg restart
bindcode mod1+mod3+$w exec --no-startup-id feh --bg-scale --randomize ~/Pictures/wallpapers
bindcode mod1+mod3+$q exec setxkbmap -layout us
bindcode mod1+$q exec setxkbmap -layout de neo

# change focus
bindcode mod1+$i focus left
bindcode mod1+$a focus down
bindcode mod1+$l focus up
bindcode mod1+$e focus right
bindcode mod1+$u workspace prev
bindcode mod1+$o workspace next

# move focused window
bindcode mod1+mod3+$i move left
bindcode mod1+mod3+$a move down
bindcode mod1+mod3+$l move up
bindcode mod1+mod3+$e move right
bindcode mod1+mod3+$u move window to workspace prev; workspace prev
bindcode mod1+mod3+$o move window to workspace next; workspace next

# window appearance
bindcode mod1+$h split h
bindcode mod1+$v split v
bindcode mod1+$f fullscreen toggle
bindcode mod1+$01 resize shrink width 40 px
bindcode mod1+$02 resize grow width 40 px
bindcode mod1+$q1 resize shrink height 40 px
bindcode mod1+$q2 resize grow height 40 px

bar {
  strip_workspace_numbers yes
  status_command i3status
  tray_output none
  i3bar_command i3bar --transparency
  position top
  separator_symbol " | "
  font pango:monospace, FontAwesome 12
  colors {
    background #000000c0
  }
}
